---
import ProductCard from './product-card.astro'

const { products } = Astro.props as Props
---

<section>
  <ul class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
    {
      products.map(product => (
        <li>
          <ProductCard product={product} />
        </li>
      ))
    }
  </ul>
</section>
